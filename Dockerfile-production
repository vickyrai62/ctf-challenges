FROM python:3.11-slim

WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y \
    gcc \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Copy requirements and install Python dependencies
COPY requirements_final_spec.txt .
RUN pip install --no-cache-dir -r requirements_final_spec.txt

# Copy application code
COPY . .

# Create non-root user
RUN useradd -m -u 1000 ctfuser && chown -R ctfuser:ctfuser /app
USER ctfuser

# Create necessary directories
RUN mkdir -p /app/instance /app/logs

# Expose port
EXPOSE 5000

# Health check
HEALTHCHECK curl -f http://localhost:5000/health || exit 1

# Run the application
CMD ["gunicorn", "--bind", "0.0.0.0:5000", "--workers", "4", "--timeout", "120", "run_final_spec:app"]
